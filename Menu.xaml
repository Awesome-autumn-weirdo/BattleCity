<Window x:Class="BattleCity.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleCity"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/vaporwave.jpg"/>
    </Window.Background>
    <Grid HorizontalAlignment="Center">
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Height="58" Width="224" Click="Button_Click" Background="#FFF078D7" FontSize="20" FontFamily="Broadway"/>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="0,325,0,0" VerticalAlignment="Top" Height="40" Width="100" Background="#FFF078D7" FontFamily="Broadway" Click="Button_Click_1"/>

    </Grid>
</Window>
